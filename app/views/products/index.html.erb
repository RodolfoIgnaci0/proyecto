<div class="container">
  <div class="row">
    <% @products.each_slice(4) do |row| %>
      <% row.each do |product| %>
        <div class="col">
          <div class="card">
            <%= image_tag product.photo, class: 'card-img-top' %>
            <div class="card-body">
              <h5> <%= product.name %> </h>
              <p> <%= product.price %> </p>
              <%= link_to "Agregar al carro", product_orders_path(product), class: 'btn btn-success', method: :post  %>
              <%= link_to 'Editar', edit_product_path(product), class: 'btn btn-warning' %>
              <%= link_to 'Borrar', product, method: :delete, class: 'btn btn-danger' %>
              <%= link_to 'Detalle', product, class: 'btn btn-primary' %>
            </div>
          </div>
        </div>
      <% end %>
      <div class="w-100" style="margin-top:20px;"> </div>
    <% end %>
  </div>
</div>

<%= link_to "nuevo producto", new_product_path, class: 'btn btn-success' %>
